<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TaskProgram</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TaskProgram.styles.css" asp-append-version="true" />
</head>
<body>
<header>
    <nav>
        <ul>

             @if (Context.Session.GetString("User") != null)
            {
                <li><a asp-controller="Login" asp-action="Index">Home</a></li>
                <li><a asp-controller="Login" asp-action="Welcome">Welcome</a></li>
                <li><a asp-controller="Login" asp-action="Logout">Logout</a></li>
            }
            else
            {
                <li><a asp-controller="Login" asp-action="Index">Login</a></li>
                <li><a asp-controller="Login" asp-action="Register">Register</a></li>
            }
        </ul>
    </nav>
</header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - TaskProgram - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
